{
  "name": "armonia-full-stack",
  "version": "1.0.0",
  "description": "Script para ejecutar backend y frontend simultÃ¡neamente",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd armonia-backend && npm run start:dev",
    "dev:frontend": "npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd armonia-backend && npm run build",
    "build:frontend": "npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd armonia-backend && npm run start:prod",
    "start:frontend": "npm run start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd armonia-backend && npm run test",
    "test:frontend": "npm run test",
    "db:setup": "cd armonia-backend && npm run db:push",
    "install:all": "npm install && cd armonia-backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}