model Budget {
  id          Int      @id @default(autoincrement())
  year        Int
  month       Int
  title       String
  description String?
  totalAmount Float
  approvedDate DateTime?
  status      BudgetStatus @default(DRAFT) // Usar el enum de schema_financial.prisma
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  items       BudgetItem[]
  createdBy   User     @relation("CreatedBudgets", fields: [createdById], references: [id])
  createdById Int
  approvedBy  User?    @relation("ApprovedBudgets", fields: [approvedById], references: [id])
  approvedById Int?

  @@unique([year, month])
  @@index([status])
  @@index([approvedById])
}