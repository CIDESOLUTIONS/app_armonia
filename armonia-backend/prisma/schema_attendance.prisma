model Attendance {
  id         Int      @id @default(autoincrement())
  assemblyId Int
  assembly   Assembly @relation(fields: [assemblyId], references: [id])
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  present    Boolean
  joinedAt   DateTime @default(now())

  @@unique([userId, assemblyId])
  @@index([assemblyId])
  @@index([userId])
}
